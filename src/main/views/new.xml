<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="New Todolist">
	<div id="list">
		<div class="entry new new-list">
			<h2>New Todolist</h2>
			<form action="#{path('new/list')}" method="post">
				<div>
					<input type="text" placeholder="List name" id="title" name="title"/>
				</div>
				<div>
					<access-token-for-url path="#{path('new/list')}"/>
					<input type="submit" value="Add" id="add" name="add"/>
				</div>
			</form>
		</div>
	</div>
</fragment>
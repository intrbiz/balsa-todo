<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Balsa Todolist Metrics</title>
		<style>
			table {
				border-collapse: collapse;
			}
			th, td {
				text-align: left;
				padding: 4px;
				border: 1px solid #2c2c2c;
			}
		</style>
	</head>
	<body>
		<h1>Balsa Todolist Metrics</h1>
		<p>
			This is a (very) simple listing of the metrics available from this demo application.
		</p>
		<h3>Gauges:</h3>
		<table>
			<tr>
				<th>Source</th>
				<th>Name</th>
				<th>Value</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr rendered="#{metric.isGaugue()}">
					<td>#{metric.source}</td>
					<td>#{metric.name}</td>
					<td>#{metric.value}</td>
				</tr>
			</data-set>
		</table>
		<h3>Counters:</h3>
		<table>
			<tr>
				<th>Source</th>
				<th>Name</th>
				<th>Count</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr rendered="#{metric.isCounter()}">
					<td>#{metric.source}</td>
					<td>#{metric.name}</td>
					<td>#{metric.count}</td>
				</tr>
			</data-set>
		</table>
		<h3>Meters:</h3>
		<table>
			<tr>
				<th>Source</th>
				<th>Name</th>
				<th>Count</th>
				<th>Mean Rate</th>
				<th>One Minute Rate</th>
				<th>Five Minute Rate</th>
				<th>Fifteen Minute Rate</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr rendered="#{metric.isMeter()}">
					<td>#{metric.source}</td>
					<td>#{metric.name}</td>
					<td>#{metric.count}</td>
					<td>#{metric.meanRate}</td>
					<td>#{metric.oneMinuteRate}</td>
					<td>#{metric.fiveMinuteRate}</td>
					<td>#{metric.fifteenMinuteRate}</td>
				</tr>
			</data-set>
		</table>
		<h3>Histograms:</h3>
		<table>
			<tr>
				<th>Source</th>
				<th>Name</th>
				<th>Count</th>
				<th>Min</th>
				<th>Max</th>
				<th>Median</th>
				<th>Mean</th>
				<th>75th</th>
				<th>95th</th>
				<th>98th</th>
				<th>99th</th>
				<th>Std Dev</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr rendered="#{metric.isMeter()}">
					<td>#{metric.source}</td>
					<td>#{metric.name}</td>
					<td>#{metric.count}</td>
					<td>#{metric.snapshot.min}</td>
					<td>#{metric.snapshot.max}</td>
					<td>#{metric.snapshot.median}</td>
					<td>#{metric.snapshot.mean}</td>
					<td>#{metric.snapshot.get75thPercentile()}</td>
					<td>#{metric.snapshot.get95thPercentile()}</td>
					<td>#{metric.snapshot.get98thPercentile()}</td>
					<td>#{metric.snapshot.get99thPercentile()}</td>
					<td>#{metric.snapshot.stdDev}</td>
				</tr>
			</data-set>
		</table>
		<h3>Timers:</h3>
		<table>
			<tr>
				<th>Source</th>
				<th>Name</th>
				<th>Count</th>
				<th>Mean Rate</th>
				<th>One Minute Rate</th>
				<th>Five Minute Rate</th>
				<th>Fifteen Minute Rate</th>
				<th>Min</th>
				<th>Max</th>
				<th>Median</th>
				<th>Mean</th>
				<th>75th</th>
				<th>95th</th>
				<th>98th</th>
				<th>99th</th>
				<th>Std Dev</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr rendered="#{metric.isTimer()}">
					<td>#{metric.source}</td>
					<td>#{metric.name}</td>
					<td>#{metric.count}</td>
					<td>#{metric.meanRate}</td>
					<td>#{metric.oneMinuteRate}</td>
					<td>#{metric.fiveMinuteRate}</td>
					<td>#{metric.fifteenMinuteRate}</td>
					<td>#{metric.snapshot.min}</td>
					<td>#{metric.snapshot.max}</td>
					<td>#{metric.snapshot.median}</td>
					<td>#{metric.snapshot.mean}</td>
					<td>#{metric.snapshot.get75thPercentile()}</td>
					<td>#{metric.snapshot.get95thPercentile()}</td>
					<td>#{metric.snapshot.get98thPercentile()}</td>
					<td>#{metric.snapshot.get99thPercentile()}</td>
					<td>#{metric.snapshot.stdDev}</td>
				</tr>
			</data-set>
		</table>
	</body>
</html>
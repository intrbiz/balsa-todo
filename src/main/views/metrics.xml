<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Balsa Todolist Metrics</title>
		<style>
			table {
				border-collapse: collapse;
			}
			th, td {
				text-align: left;
				padding: 4px;
				border: 1px solid #2c2c2c;
			}
		</style>
	</head>
	<body>
		<h1>Balsa Todolist Metrics</h1>
		<p>
			This is a (very) simple listing of the metrics available from this demo application.
		</p>
		<h3>Timers:</h3>
		<table>
			<tr>
				<th>Group</th>
				<th>Name</th>
				<th>Scope</th>
				<th>Count</th>
				<th>Mean</th>
				<th>Unit</th>
			</tr>
			<data-set var="metric" value="#{metrics}">
				<tr>
					<td>#{metric.group}</td>
					<td>#{metric.name.toLowerCase()}</td>
					<td>#{coalesce(metric.scope, '')}</td>
					<td>#{metric.metric.count}</td>
					<td>#{metric.metric.mean}</td>
					<td>#{metric.metric.durationUnit}</td>
				</tr>
			</data-set>
		</table>
	</body>
</html>